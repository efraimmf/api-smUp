generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professor {
  id       String @id @default(uuid())
  nome     String
  cpf      String
  email    String
  telefone String
}

model Aluno {
  id         String      @id @default(uuid())
  nome       String
  cpf        String
  email      String
  telefone   String
  matriculas Matricula[]
}

model Turma {
  id         String      @id @default(uuid())
  disciplina String
  matriculas Matricula[] @relation("TurmaMatricula")
}

model Matricula {
  id      String  @id @default(uuid())
  alunoid String
  turmas  Turma[] @relation("TurmaMatricula")
  aluno   Aluno   @relation(fields: [alunoid], references: [id])
}
